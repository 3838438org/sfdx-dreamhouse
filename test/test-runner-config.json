{
    "settings": {
        "outputDir": "$WORKSPACE/test/artifacts",
        "selenium": true
    },
    "orgs": [
        {
            "name": "dreamhouse-default",
            "definition": "config/workspace-scratch-def.json"
        }
    ],
    "suites": [
        {
            "name": "basic-apex",
            "categories": [
                {
                    "type": "apex",
                    "tests": [
                        "PropertyControllerTest"
                    ]
                }
            ]
        },{
            "name": "integration",
            "categories": [
                {
                    "type": "integration",
                    "tests": ["test.integration.IntegrationTest"]
                }
            ]
        }
    ],
    "environments": [
        {
            "name": "dreamhouse",
            "orgs": [
                "dreamhouse-default"
            ]
        }
    ],
    "invocations": [
        {
            "name": "basic",
            "environments": [
                "dreamhouse"
            ],
            "suites": [
                "basic-apex"
            ]
        },{
            "name": "all-tests",
            "environments": [
                "dreamhouse"
            ],
            "suites": [
                "basic-apex",
                "integration"
            ]
        }
    ],
    "operations": [
        {
            "name": "install-selenium-client",
            "type": "shell",
            "exec": "bash",
            "args": [
                "$WORKSPACE/test/install-selenium.sh",
                "$outputDir"
            ]
        },
        {
            "name": "compile",
            "exec": "javac",
            "args": [
                "-cp .:$outputDir/selenium-client-jars/client-combined-3.0.0-beta3-nodeps.jar:$outputDir/selenium-client-jars/lib/*",
                "-d $outputDir",
                "test/integration/BaseSalesforceTest.java",
                "test/integration/IntegrationTest.java"
            ]
        },
        {
            "name": "integration",
            "env": {
                "SALESFORCE_ACCESS_TOKEN": "$ORG_ACCESSTOKEN",
                "SALESFORCE_INSTANCE_URL": "$ORG_INSTANCEURL"
            },
            "type": "spawn",
            "exec": "java",
            "args": [
                "-cp",
                ".:$outputDir/selenium-client-jars/client-combined-3.0.0-beta3-nodeps.jar:$outputDir:$outputDir/selenium-client-jars/lib/*:force-app",
                "org.junit.runner.JUnitCore",
                "$TESTS"
            ]
        },
        {
            "name": "wait-for-org-replication",
            "type": "shell",
            "exec": "sleep",
            "args": [
                "1m"
            ]
        }
    ],
    "contexts": [
        {
            "name": "local",
            "useWorkspaceOrg": true,
            "pushSource": false,
            "beforeTests": [
                "install-selenium-client",
                "compile"
            ]
        },
        {
            "name": "pull-request",
            "beforeTests": [
                "install-selenium-client",
                "compile"
            ],
            "afterTests": [
                "wait-for-org-replication"
            ]
        },
        {
            "name": "integration",
            "beforeTests": [
                "install-selenium-client",
                "compile"
            ]
        }
    ],
    "profiles": [
        {
            "name": "dev",
            "context": "local",
            "default": true,
            "invocations": [
                "basic"
            ]
        },
        {
            "name": "basic",
            "context": "pull-request",
            "invocations": [
                "basic"
            ]
        },
        {
            "name": "master",
            "context": "integration",
            "invocations": [
                "all-tests"
            ]
        }
    ]
}
